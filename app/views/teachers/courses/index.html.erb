<section id='my-courses'>
  <% @courses.each do |course| %>
    <section id='course-<%=course.id%>'>
    <%= course.name %>
    <%= link_to 'Remove Course', "/teachers/courses/#{course.id}", method: :delete, data: { confirm: "Are you sure?" } %>
    </section>
  <% end %>
</section>
<section id='add-courses'>
  <%= form_with url: '/teachers/courses', method: :post do |f| %>
    <%= f.text_field :name %>
    <%= f.text_field :school_name %>
    <%= f.submit 'Add Course' %>
  <% end %>
</section>
